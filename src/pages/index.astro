---
import MainLayout from "@/layouts/MainLayout.astro";

import Bill from "@/components/Bill.vue";
import Result from "@/components/Result.vue";

import Image from "astro/components/Image.astro";
import logo from "@/assets/logo.svg";
---

<MainLayout title="Frontend Mentor | Tip Calculator">
  <main class="flex h-screen flex-col items-center justify-center px-10">
    <Image
      src={logo}
      alt="Splitter Tip Calculator"
      class="mb-18"
      loading="eager"
    />
    <div
      class="bg-theme-white flex h-[480px] w-full max-w-[920px] flex-row rounded-3xl shadow-xl"
    >
      <Bill client:load class="w-1/2" />
      <Result client:load class="w-1/2" />
    </div>
  </main>
</MainLayout>
