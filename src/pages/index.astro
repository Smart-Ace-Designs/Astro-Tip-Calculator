---
import MainLayout from "@/layouts/MainLayout.astro";

import Bill from "@/components/Bill.astro";

import Image from "astro/components/Image.astro";
import logo from "@/assets/logo.svg";
---

<MainLayout title="Frontend Mentor | Tip Calculator">
  <main class="flex h-screen flex-col items-center justify-center px-10">
    <Image
      src={logo}
      alt="Splitter Tip Calculator logo"
      class="mb-18"
      loading="eager"
    />
    <div
      class="bg-theme-white flex h-[480px] w-full max-w-[920px] flex-row rounded-3xl shadow-xl"
    >
      <div class="w-1/2">
        <Bill />
      </div>
      <div
        class="bg-theme-very-dark-cyan my-8 mr-10 w-1/2 space-y-10 rounded-2xl px-8 pt-12 pb-8"
      >
        <div class="flex justify-between">
          <div>
            <h2 class="text-theme-light-grayish-cyan">Tip Amount</h2>
            <p class="text-theme-grayish-cyan text-sm">/ person</p>
          </div>
          <p class="text-theme-strong-cyan text-5xl">$0.00</p>
        </div>
        <div class="flex justify-between">
          <div>
            <h2 class="text-theme-light-grayish-cyan">Total</h2>
            <p class="text-theme-grayish-cyan text-sm">/ person</p>
          </div>
          <p class="text-theme-strong-cyan text-5xl">$0.00</p>
        </div>
      </div>
    </div>
  </main>
</MainLayout>
